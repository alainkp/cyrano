<div class="lesson-show">
  <div class="lesson-image">
    <%= image_tag "open-book.svg", alt: "alttext", width: '70%' %>
  </div>
  <div class="lesson-container animated slideInUp fast">
    <div class="lesson-body">
      <h1 class="border-bottom pb-1"><%= @lesson.poem.title %></h1>
      <p><i class="fas fa-feather-alt"></i><%= @lesson.poem.author_name %></p>
      <p><i class="fas fa-align-justify"></i><%= pluralize @lesson.poem.content.split(/\n/).count, 'ligne' %></p>
      <p class="poem-difficulty-list"><%# (@poem.difficulty.to_i).times do %>
        <i class="fas fa-user-graduate on"></i>
        <% if @lesson.poem.difficulty.to_i <= 1 %>
          <span class="easy-difficulty">facile</span>
        <% elsif @lesson.poem.difficulty.to_i <= 3 %>
          <span class="medium-difficulty">moyen</span>
        <% else %>
          <span class="hard-difficulty">difficile</span>
        <% end %>
      </p>

        <h1><span class="highlight">Progression</span> :</h1>
      <div class="d-flex justify-content-between lesson-progressions mt-3">
        <div class="lesson-progression text-center">
          <div id="reading-progression" class="lesson-show-progression mb-3" data-progression="<%= @lesson.reading_progression %>" data-color-first="#1A9AD6" data-color-last="#85D3F7">
          </div>
          <p>Lire</p>
        </div>
        <div class="lesson-progression text-center">
          <div id="listening-progression" class="lesson-show-progression mb-3" data-progression="<%= @lesson.listening_progression %>" data-color-first="#FFC902" data-color-last="#FFEBA1">
          </div>
          <p>Écouter</p>
        </div>
        <div class="lesson-progression text-center">
          <div id="recite-progression" class="lesson-show-progression mb-3" data-progression="<%= @lesson.recites.last ?  @lesson.recites.last.progression : "0"  %>" data-color-first="#EA2B2B" data-color-last="#FDB5B4">
          </div>
          <p>Réciter</p>
        </div>
      </div>
      <div class="lesson-steps d-flex justify-content-around mt-4">
        <%= link_to reading_lesson_path(@lesson) , class: "lesson-step read" do%>
        <i class="fab fa-readme"></i>
        <% end %>
        <%= link_to listening_lesson_path(@lesson) , class: "lesson-step listen" do %>
        <i class="fas fa-headphones-alt"></i>
        <% end %>
        <%= simple_form_for [@lesson, @recite] do |f| %>
        <%= button_tag type: 'submit', class: "lesson-step recite" do %>
        <i class="fas fa-microphone-alt"></i>
        <% end %>
        <% end %>
        <div class="lesson-overall-progress">
          <div class="lesson-overall-progress-bar"></div>
        </div>
      </div>


    </div>
  </div>
</div>
