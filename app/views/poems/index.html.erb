<%= render "searchbar" %>
<div class ="card-container">
  <% @poems.each do |poem| %>
  <div class="card-product">
    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/2/25/Victor_Hugo_001.jpg/1200px-Victor_Hugo_001.jpg"alt="..."class="rounded-circle"/>
    <div class="card-product-infos">
      <h2><%= link_to poem.title, poem_path(poem) %></h2>
      <p><%= poem.author_name %></p>
      <p class="float-right">
          Difficulty
        <% (poem.difficulty.to_i).times do %>
          <i class="fas fa-user-graduate on"></i>
        <% end %>
        <% (5 - poem.difficulty.to_i).times do %>
          <i class="fas fa-user-graduate off"></i>
        <% end %>
      </p>
    </div>
  </div>
  <% end %>
</div>
