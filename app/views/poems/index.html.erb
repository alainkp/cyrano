<%= form_tag poems_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a poem or an author"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<% @poems.each do |poem| %>
  <div class="card-product">
    <div class="card-product-infos">
      <h2><%= link_to poem.title, poem_path(poem) %></h2>
      <p><%= poem.author_name %></p>
      <p><%= poem.difficulty %></p>
    </div>
  </div>
<% end %>

