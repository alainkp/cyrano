<div class="container my-3 bg-white">
  <h1>LESSON</h1>
  <p><%= @lesson.poem.title %></p>
  <br>
  <br>
  <br>
</div>
<div class="container my-3 bg-white">
  <h1>POEM</h1>
    <div class="card-product">
      <% poem = @poem %>
      <%= image_tag('fox.svg') %>
      <div class="card-product-infos">
        <h2><%= link_to poem.title, poem_path(poem) %></h2>
        <p><%= poem.author_name %>
        <p class="float-center"></p>
        </p>
        <p class="float-left">
        <% (poem.difficulty.to_i).times do %>
          <i class="fas fa-user-graduate on"></i>
        <% end %>
        <% (5 - poem.difficulty.to_i).times do %>
          <i class="fas fa-user-graduate off"></i>
        <% end %>
        </p>

      </div>
    </div>
  <br>
  <br>
</div>
<div class="container my-3 bg-white">
  <h1>RECITE</h1>
  <p><%= @recite.lesson.poem.title %></p>
  <br>
  <br>
  <br>
</div>
<div class="container my-3 bg-white">
  <h1>USER</h1>
  <p><%= @user.first_name %></p>
  <br>
  <br>
  <br>
</div>
